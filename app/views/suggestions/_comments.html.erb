<% if not comments.empty? %>
<% comments.each do |comment| %>
<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="row">
        <div class="col-md-3">
          <div class="row">
            <div class="col-md-12">
              <% gravatar_of comment.user.email, :size => '35' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <span><% comment.user.name %></span>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <small>
                <% comment.created_at.strftime('%d %b, %Y - %H:%M %Z') %>
              </small>
            </div>
          </div>

        </div>
        <div class="col-md-9">
          <% redcarpet comment.content %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<% else %>
  <div class="row">
    <div class="col-md-12">
      <p class="text-center muted"><span class="text-warning"><i class="fa fa-frown-o"></i></span> No comments yet</p>
    </div>
  </div>
<% end %>
