<% if current_user %>
  <div class="row clearfix">
    <div class="col-md-12">
      <%= form_for(comment, url: suggestion_comments_path(suggestion_id)) do |f| %>
      <div class="form-group">
        <%= f.text_area :content, :class => 'form-control',
         :placeholder => 'Wirte your comment here',
         :rows => '5', :required => 'required' %>
      </div>
      <%= f.hidden_field :suggestion_id %>
      <%= f.hidden_field :user_id %>
      <%= f.submit 'Comment', :class => ['btn', 'btn-success'] %>
      <% end %>
    </div>
  </div>
<% end %>
