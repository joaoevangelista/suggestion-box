<%= form_for(@user, url: user_update_path, html: {method: :put}) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <p class="text-danger text-center"><%= pluralize(@user.errors.count, "error") %>
     prohibited this user from being saved</p>
</div>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :email, :class => 'control-label' %>
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :password, :class => 'control-label' %>
      <%= f.text_field :password, :class => 'form-control', :type => 'password', :placeholder => 'Add a password to change your current' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.submit 'Save', :class => ['btn', 'btn-success'] %>
    </div>
  </div>
</div>
<% end %>
