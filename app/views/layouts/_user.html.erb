<% if current_user %>
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
  aria-haspopup="true" aria-expanded="false"> <%= current_user.name %>  <span class="caret"></span></a>
  <ul class="dropdown-menu">
    <li><%= link_to icon('user', 'Your Account', :class => 'fa-fw'), user_path %></li>
    <li><%= link_to icon('pencil', 'Edit Account', :class => 'fa-fw'), user_edit_path %></li>
    <li><%= link_to icon('sign-out', 'Log out', :class => 'fa-fw'), session_destroy_path %></li>
  </ul>
</li>
<% end %>
